# shell aliases to be used by both bash and zsh
export GOPATH="$HOME/go"
export PATH="${PATH}:${HOME}/.local/bin/"
export PATH="${PATH}:${GOPATH}/bin"
export GOROOT=`go env GOROOT`
export EDITOR="$(which nvim)"
export VISUAL=$EDITOR
# export FZF_DEFAULT_COMMAND='rg --files --no-ignore --hidden --follow --glob "!.git/*"'
export KUBECONFG="$HOME/.kube/config"
alias mv="mv -i"
alias vim="$EDITOR"
alias ssh="kitty +kitten ssh"
# alias rm="$(which trash)"
alias untar="tar -zxvf"
alias ping="ping -c 5"
alias py="python3"
alias config="cd $HOME/.dotfiles"
alias dev="cd $HOME/Projects"
alias kube="kubectl"
alias godev="cd $GOPATH/src/github.com/dpgraham4401"
alias speed="speedtest-cli --simple"
# autostart ssh agent
if ! pgrep -u "$USER" ssh-agent > /dev/null; then
    ssh-agent -t 1h > "$XDG_RUNTIME_DIR/ssh-agent.env"
fi
if [[ ! "$SSH_AUTH_SOCK" ]]; then
    source "$XDG_RUNTIME_DIR/ssh-agent.env" >/dev/null
fi
