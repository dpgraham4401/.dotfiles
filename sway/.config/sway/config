### Input/Output devices
output HDMI-A-1 {
	resolution 1920x1080
    scale 1.0
	pos 1600 0
    scale_filter linear
}

output eDP-1 {
	resolution 2560x1600
    scale 1.8
    scale_filter linear
}

input * {
	xkb_layout "us"
	xkb_numlock enable
}

input type:touchpad {
    tap enabled
}

for_window [app_id="^launcher$"] floating enable, sticky enable, resize set 30 ppt 60 ppt, border pixel 10
set $menu exec $term --class=launcher -e /home/dg/Scripts/sway-launcher-desktop.sh
bindsym $mod+space exec $menu
